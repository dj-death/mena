<% include ./include/headcssadmin.html %>

<body class="bg-black" ng-app="marksimosadmin">

<div class="form-box col-md-6 col-md-offset-3"  ng-controller="adminLoginController">
    <h2>Identification</h2>
    <form ng-submit="login(loginForm)" role="form" name="loginForm" ng-cloak>
        <div class="form-group" ng-class="{ 'has-error': loginForm.username.$dirty && loginForm.username.$invalid}">
            <input type="text" name="username" id="username" class="form-control" placeholder="Identifiant" ng-model="data.admin.username" required />
            <span ng-show="loginForm.username.$dirty && loginForm.username.$invalid" class="help-block"><i class="fa fa-times-circle-o"></i>Veuillez saisir votre identifiant</span>
        </div>

        <div class="form-group" ng-class="{ 'has-error': loginForm.password.$dirty && loginForm.password.$invalid}">
            <input type="password" name="password" id="password" class="form-control" placeholder="Mot de passe" ng-model="data.admin.password" required ng-minlength="6" ng-maxlength="20"/>
            <span ng-show="loginForm.password.$dirty && loginForm.password.$invalid" class="help-block"><i class="fa fa-times-circle-o"></i> Mot de Passe erron√© !</span>
        </div>

        <div class="form-actions">
            <button type="submit" ng-disabled="form.$invalid || loginForm.dataLoading" class="btn btn-primary">Se Connecter</button>
            <img ng-if="vm.dataLoading" src="data:image/gif;base64," />
            <a href="#/register" class="btn btn-link">s'inscrire</a>
        </div>
    </form>
</div>


