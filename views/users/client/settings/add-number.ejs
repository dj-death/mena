<div class="modal fade effect-scale show" id="modalAddNumber" role="dialog" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-body pd-20 pd-sm-30">
          <button type="button" class="close pos-absolute t-20 r-20" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></span>
          </button>

          <h5 class="tx-18 tx-sm-20 mg-b-20 mg-sm-b-30">Add New Number</h5>

          <form id="formCalendar" method="post" action="/client/project/create">
            <label>Phone Number</label>
            <div class="form-group">
                <div class="input-group">
                  <select id="country-dialcode" name="country-dialcode" class="form-control custom-select" aria-label="country callingcode" style="max-width: 180px !important;">
                    <%- include('../../include/callingcode-country') %>
                  </select>

                  <select id="state-dialcode" name="state-dialcode" class="form-control custom-select" aria-label="state callingcode">
                    <%- include('../../include/callingcode-state') %>
                  </select>

                  <input type="tel" id="phone" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Cost</label>
                <div class="input-group">
                  <input type="number" class="form-control custom-input" min="0" step="0.1" />

                  <div class="input-group-append">
                    <span class="input-group-text">$</span>
                  </div>
                </div>

            </div>
        </div>

        <div class="modal-footer pd-x-20 pd-y-15">
            <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
        </div>
      </div>
    </div>
  </div>